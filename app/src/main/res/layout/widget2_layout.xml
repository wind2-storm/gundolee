<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="#3B2F2F"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingTop="8dp"
    android:paddingEnd="20dp"
    android:paddingBottom="8dp">

    <!-- Header Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:paddingBottom="4dp">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/img" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/imageView1"
            android:text="김철수"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_alignParentStart="true"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/pretendardsemibold"
            android:text="15%"
            android:textColor="#BFE9D7"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_d_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/pretendardsemibold"
            android:gravity="end"
            android:text="D-213"
            android:textColor="#F7F7F7"
            android:textSize="14sp" />
    </RelativeLayout>

    <!-- Progress Bar 1 -->
    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:max="100"
        android:progress="40"
        android:progressDrawable="@drawable/rounded_progress_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <!-- First Subsection -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_percentage2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/pretendardsemibold"
                    android:text="15%"
                    android:textColor="#FEF9DD"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_d_day2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/pretendardsemibold"
                    android:gravity="end"
                    android:text="다음 호봉"
                    android:textColor="#F7F7F7"
                    android:textSize="14sp" />
            </LinearLayout>


            <ProgressBar
                android:id="@+id/progress_bar2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_below="@id/tv_d_day2"
                android:max="100"
                android:progress="14"
                android:progressDrawable="@drawable/rounded_progress_bar2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_percentage3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/pretendardsemibold"
                    android:text="15%"
                    android:textColor="#FEF9DD"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_d_day3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/pretendardsemibold"
                    android:gravity="end"
                    android:text="다음 계급"
                    android:textColor="#F7F7F7"
                    android:textSize="14sp" />
            </LinearLayout>


            <ProgressBar
                android:id="@+id/progress_bar3"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:max="100"
                android:progress="14"
                android:progressDrawable="@drawable/rounded_progress_bar2" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
